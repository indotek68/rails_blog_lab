<% @posts.each do |post| %>
	<div>
		<h2><%= post.name %></h2>
		<p><%= post.author %></p>
		<p><%= post.description %></p>
	</div>
		<form action="/show/<%=post.id%>" method="get">
			<input type="hidden" value="<%=post.id%>">
			<input type="submit" value="Update">
		</form>
		<forn action="/destroy" method="post">
			<input type="hidden" value="<%=post.id%>">
			<input type="submit" value="Delete">
		</form>
	<% end %>