<div class="container text-center">
	<div>
			<h2>Welcome to the Blog</h2>
			<a href="/posts/new">Click here to Create a new post</a><br>
	</div>


<% @posts.each do |post| %>
	<div>
			<a href="/posts/<%=post.id %>"><h4><%= post.name %></h4></a>
			<p>By: <%= post.author %></p>
			<p>Number of Comments: <%=post.comments.length %></p>
	<% end %>
	</div>