<div class="row text-center">
	<div class="col-xs-4 col-xs-offset-4">
	<h3>Create New Blog Post!</h3>
			<%= form_for [@post] do |f| %>
			<%= f.text_field :name, placeholder:"Title", class: "form-control" %>
			<%= f.text_field :author, placeholder:"Your Name", class: "form-control" %>
			<%= f.text_area :description, placeholder:"Description",  class: "form-control" %>
			<%=fields_for :tag, @post.tags do |tag_fields| %>
				<%=tag_fields.text_field :name, placeholder:"Tag", class:"form-control"%>
				<% end %>
			<%= f.submit "Submit Blog", class:"btn btn-success" %>
			<% end %>
	</div>
</div>
